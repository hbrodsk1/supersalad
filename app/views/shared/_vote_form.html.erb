<% unless current_user.votes.pluck(:food_id).include?(food.id) %>
    <%= button_to "Like This Food", user_votes_path(current_user, { vote: { food_id: food.id } }), form_class: [food.id, 'like-btn', 'btn-success', 'btn-lg', 'btn-user-page'], :remote => true %>
<% else %>
    <% vote = food.votes.where(user_id: current_user.id).first %>
    <%= button_to "Unlike This Food", user_vote_path(current_user, vote), form_class: [food.id, "unlike-btn", "btn-danger", "btn-lg", "btn-user-page"], :remote => true, method: "delete" %>
<% end %>

