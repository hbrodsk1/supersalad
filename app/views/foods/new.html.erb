<h1>Upload Your Soup or Salad!</h1>

<%# add error list %>

<%= form_for @food,  url: {action: "create"}, html: { multipart: true } do |f| %>
  
  <div class="field">
 	  <%=f.hidden_field :user_id, :value => current_user.id %>

    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :kind %><br>
    <%= f.select(:kind, [['Soup', 'soup'], ['Salad', 'salad']]) %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, size: "40x8", placeholder: "Anything you want to say about your food..." %>
  </div>

  <div class="field">
    <%= f.label :recipe %><br>
    <%= f.text_area :recipe, size: "20x12", placeholder: "Give us that dank recipe" %>
  </div>

  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>